# Set path based on languages installed on system
CARGOPATH=$(which cargo)
if [[ "$CARGOPATH" != "" ]]; then
    export RUSTBIN=$HOME/.cargo/bin
    PATH=$PATH:$RUSTBIN
fi

GOBIN=$(which go)
if [[ "$GOBIN" != "" ]]; then
    #exporting of gopath is done in extras
    if [[ "$GOPATH" != "" ]]; then
        PATH=$PATH:$GOPATH/bin
    else
        echo "GOPATH not set!"
    fi
fi

export PATH=$PATH:/usr/local/sbin
